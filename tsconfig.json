{
    "compilerOptions": {
      "noEmit": true,
      "module": "commonjs",
      "target": "es6",
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "paths": {
        "src/*": ["./src/*"]
      },
      "types": ["jest"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}